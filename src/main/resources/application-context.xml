<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.example.couch.FootballCouch" id="footballCouch">
        <constructor-arg value="Mohammad"/>
    </bean>

    <bean class="org.example.couch.BasketballCouch" id="basketballCouch">
        <constructor-arg value="Hamed"/>
    </bean>

    <bean class="org.example.player.FootballPlayer" id="player">
        <constructor-arg index="0" value="Ali"/>
        <constructor-arg index="1" value="25"/>

        <property name="customCouch" ref="footballCouch"/>
<!--         setCustomCouch-->
    </bean>

</beans>